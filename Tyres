//c++ program for day 6
#include <iostream>
using namespace std;

int main() {
    int t, i, n, m;
    cout << "enter testcase: ";
    cin >> t;
    
    if (t<=1000 && t>=1) 
    {
        for(i=0;i<t;i++)
        {
            cin >> n >> m;
            if(n>=1 && m>=1 && m<=100 && n<=100)
            {
                cout << (n*2)+(m*4);
            }
            else cout <<"invalid input\n";
        }
    }
    else cout << "input invalid\n";
    return 0;
}
