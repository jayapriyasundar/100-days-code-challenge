//c program to find area of the circle (pi defined)

#include <stdio.h>

#define pi 3.14



int main() {

   int r;

   //radius value as input from user

   printf("enter value of radius:\n");

   scanf("%d",&r);

  //printing the area

   printf("the area of circle is:\n%f\n", pi*r*r);

    return 0;

}
