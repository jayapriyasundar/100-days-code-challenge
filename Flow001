//c++ program for day 21
#include <iostream>
using namespace std;

int main() {
    int t, i, n;
    cout << "enter testcase: ";
    cin >> t;
    
    if (t<=1000 && t>=1) 
    {
        for(i=0;i<t;i++)
        {
            cin >> n;
            if(n<=1500)
            cout << n+(0.1*n)+(n*0.9);
             else
             cout << n+500+(n*0.98);
         }
    }
    else cout << "input invalid\n";
    return 0;
}
